@model LoginUser

@{ Layout = null; }

<html lang="en">
<head>
    <title>Login</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/AutoDealer.Web.styles.css" asp-append-version="true"/>
</head>

<body>
<div class="d-flex justify-content-center m-5">
    <div class="card w-50 shadow">
        <form asp-controller="Auth" asp-action="Login">
            <fieldset>
                <legend>
                    <h2 class="card-header text-center p-3">Login</h2>
                </legend>
            </fieldset>

            <div class="card-body mx-2">
                <div class="text-danger text-center my-2 fs-2">@Html.ValidationMessage("auth-result")</div>

                <div class="form-floating my-2">
                    <input asp-for="Email" class="form-control has-validation" type="email" autofocus=""
                           placeholder="@Html.DisplayNameFor(vm => vm.Email)">
                    <label asp-for="Email"></label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-floating my-2">
                    <input asp-for="Password" class="form-control has-validation" type="password"
                           placeholder="@Html.DisplayNameFor(vm => vm.Password)">
                    <label asp-for="Password"></label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-floating my-2">
                    @{
                        var roles = Enum.GetValues<Post>().Select(post =>
                            new SelectListItem(post.DisplayName(), post.ToString()));
                        <select asp-for="Post" asp-items="roles" class="form-select" aria-label="Select role"></select>
                    }
                    <label asp-for="Post">Select role</label>
                    <span asp-validation-for="Post" class="text-danger"></span>
                </div>

                <div class="text-center my-3">
                    <button class="btn btn-success" type="submit">Login</button>
                </div>
            </div>

        </form>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>