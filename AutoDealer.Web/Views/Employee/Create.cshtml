@model EmployeeData 
@{
    ViewBag.Title = "Create employee";
}

<div class="p-5 g-3 shadow">
    <form asp-controller="Employee" asp-action="Create" class="has-validation">
        <h2 class="text-center">Create employee</h2>

        <h4 class="row mx-2">Full name</h4>

        <div class="row g-2">
            <div class="col form-floating">
                <input asp-for="FullName.LastName" class="form-control" autofocus="" placeholder="Last name">
                <label>Last name</label>
                <span asp-validation-for="FullName.LastName" class="text-danger"></span>
            </div>

            <div class="col form-floating">
                <input asp-for="FullName.FirstName" class="form-control" placeholder="First name">
                <label>First name</label>
                <span asp-validation-for="FullName.FirstName" class="text-danger"></span>
            </div>

            <div class="col form-floating">
                <input asp-for="FullName.MiddleName" class="form-control" placeholder="Middle name">
                <label>Middle name</label>
                <span asp-validation-for="FullName.MiddleName" class="text-danger"></span>
            </div>
        </div>

        <hr class="my-4"/>

        <div class="row">
            <div class="col">
                <h4 class="row mx-2">Passport data</h4>

                <div class="row g-2">
                    <div class="col-4">
                        <div class="form-floating">
                            <input asp-for="Passport.Series" class="form-control" placeholder="Passport series">
                            <label>Passport series</label>
                            <span asp-validation-for="Passport.Series" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col">
                        <div class="form-floating">
                            <input asp-for="Passport.Number" class="form-control" placeholder="Passport number">
                            <label>Passport number</label>
                            <span asp-validation-for="Passport.Number" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col">
                <h4 class="row mx-2">Post</h4>

                <div class="row g-2">
                    <div class="col">
                        <div class="form-floating">
                            @{
                                var roles = Enum.GetValues<Post>().Select(post =>
                                    new SelectListItem(post.DisplayName(), post.ToString()));
                                <select asp-for="Post" asp-items="roles" class="form-select"></select>
                            }
                            <label asp-for="Post">Select role</label>
                            <span asp-validation-for="Post" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <hr class="my-4"/>

        <div class="my-3 g-3 d-flex justify-content-evenly">
            <button class="btn btn-success" type="submit">Create</button>
            <button class="btn btn-outline-primary" type="reset">Clear</button>
            <a class="btn btn-danger" asp-action="Table">Cancel</a>
        </div>

    </form>
</div>